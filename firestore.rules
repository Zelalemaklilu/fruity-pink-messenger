rules_version = '2';

service cloud.firestore {

  match /databases/{database}/documents {

    // 1. ACCOUNTS: Public Read (For Username Check & Search), Authenticated Write
    match /accounts/{accountId} {
      // Anyone can read accounts (needed for username search)
      allow read: if true;
      // Only authenticated users can create their own accounts
      allow create: if request.auth != null;
      // Only the owner can update/delete (check oderId field matches auth uid)
      allow update, delete: if request.auth != null && resource.data.oderId == request.auth.uid;
    }

    // 2. CHATS: Participants can read, authenticated users can create
    match /chats/{chatId} {
      // Allow read if user is a participant
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      // Allow create for authenticated users
      allow create: if request.auth != null;
      // Allow update/delete only for participants
      allow update, delete: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    // 3. MESSAGES: Restricted to authenticated users
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

  }

}
